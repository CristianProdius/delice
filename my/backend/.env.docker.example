# Generic Strapi environment for Docker deployments
HOST=0.0.0.0
PORT=1337
URL=https://cms.example.com
APP_KEYS=replace-with-comma-separated-values
API_TOKEN_SALT=replace-with-random-string
ADMIN_JWT_SECRET=replace-with-random-string
TRANSFER_TOKEN_SALT=replace-with-random-string
ENCRYPTION_KEY=replace-with-random-string
JWT_SECRET=replace-with-random-string

# Database configuration (update host/credentials for your Postgres instance)
DATABASE_CLIENT=postgres
DATABASE_HOST=db
DATABASE_PORT=5432
DATABASE_NAME=strapi
DATABASE_USERNAME=strapi
DATABASE_PASSWORD=strapi
DATABASE_SSL=false

# Optional single connection string alternative
# DATABASE_URL=postgres://strapi:strapi@db:5432/strapi

# Upload provider (example: Cloudflare R2 via S3-compatible API)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_ENDPOINT=https://your-endpoint
AWS_REGION=auto
AWS_S3_BUCKET=your-bucket
AWS_S3_FORCE_PATH_STYLE=true
CDN_URL=https://cdn.example.com
PUBLIC_R2_DEV_URL=https://r2.dev.placeholder

# Email provider
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=you@example.com
SMTP_PASSWORD=replace-with-app-password
EMAIL_DEFAULT_FROM=you@example.com
EMAIL_DEFAULT_REPLY_TO=you@example.com

# Strapi settings
UPLOADS_FOLDER_PREFIX=my
WEBHOOKS_POPULATE_RELATIONS=false
CRON=true
